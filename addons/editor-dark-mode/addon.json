{
  "name": "Scratch编辑器深色主题与自定义颜色",
  "description": "自定义Scratch编辑器使用的颜色，由不同的贡献者提供的多种黑暗的主题。如果你不需要深色模式，但想改变颜色主题，可以通过“预制设定”中的“Scratch默认颜色”选项调整它。",
  "credits": [
    {
      "name": "Maximouse (addon, \"Experimental\" Dark)",
      "link": "https://github.com/mxmou/customize-scratch"
    },
    {
      "name": "infinitytec (3.Dark, 3.Darker)",
      "link": "https://github.com/infinitytec"
    },
    {
      "name": "_nix (Dark editor)",
      "link": "https://github.com/towerofnix"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "injectAsStyleElt": true,
  "updateUserstylesOnSettingsChange": true,
  "userscripts": [
    {
      "url": "text_color.js",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "runAtComplete": false
    }
  ],
  "userstyles": [
    {
      "url": "experimental_editor.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ]
    },
    {
      "url": "text-shadow.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "textShadow",
        "value": true
      }
    },
    {
      "url": "dark_comments.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "darkComments",
        "value": true
      }
    },
    {
      "url": "scrollbar.css",
      "matches": [
        "https://scratch.mit.edu/projects/*/",
        "https://scratch.mit.edu/projects/*/editor",
        "https://scratch.mit.edu/projects/*/fullscreen",
        "https://scratch.mit.edu/projects/editor"
      ],
      "settingMatch": {
        "id": "darkScrollbars",
        "value": true
      }
    }
  ],
  "settings": [
    {
      "name": "页面背景",
      "id": "page",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "高光颜色",
      "id": "primary",
      "type": "color",
      "default": "#4d97ff"
    },
    {
      "name": "顶部导航栏背景",
      "id": "menuBar",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "选中的标签背景",
      "id": "activeTab",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "非选中的标签背景",
      "id": "tab",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "角色列表背景",
      "id": "selector",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "资源列表背景",
      "id": "selector2",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "选中的角色/资源卡片背景",
      "id": "selectorSelection",
      "type": "color",
      "default": "#111111"
    },
    {
      "name": "图片/声音编辑器背景",
      "id": "accent",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "输入框背景",
      "id": "input",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "编辑器积木区背景",
      "id": "workspace",
      "type": "color",
      "default": "#151515"
    },
    {
      "name": "积木种类菜单背景",
      "id": "categoryMenu",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "积木栏背景",
      "id": "palette",
      "type": "color",
      "default": "#202020"
    },
    {
      "name": "全屏背景",
      "id": "fullscreen",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "全屏顶部栏背景",
      "id": "stageHeader",
      "type": "color",
      "default": "#000000"
    },
    {
      "name": "边框颜色",
      "id": "border",
      "type": "color",
      "default": "#ffffff0d",
      "allowTransparency": true
    },
    {
      "name": "显示积木区斑点",
      "id": "dots",
      "type": "boolean",
      "default": false
    },
    {
      "name": "显示积木上文字的影子",
      "id": "textShadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "深色注释",
      "id": "darkComments",
      "type": "boolean",
      "default": true
    },
    {
      "name": "深色滚轮",
      "id": "darkScrollbars",
      "type": "boolean",
      "default": true
    }
  ],
  "presets": [
    {
