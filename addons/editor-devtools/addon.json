{
  "name": "开发工具",
  "description": "在Scratch编辑器中加入查找框和新菜单选项：复制/粘贴积木、更容易的整理、转到自定义块定义等。",
  "info": [
    {
      "type": "notice",
      "text": "按“Ctrl+F”开始搜索, “Ctrl+空格”开启“由名称添加积木”页面，“Ctrl+左/右”查找历史记录。",
      "id": "shortcuts"
    }
  ],
  "credits": [
    {
      "name": "griffpatch"
    }
  ],
  "settings": [
    {
      "name": "增强版“整理积木”",
      "id": "enableCleanUpPlus",
      "type": "boolean",
      "default": true
    },
    {
      "name": "粘贴积木至光标位置",
      "id": "enablePasteBlocksAtMouse",
      "type": "boolean",
      "default": true
    },
    {
      "name": "鼠标中键可以导航变量、自定义块或事件",
      "id": "enableMiddleClickFinder",
      "type": "boolean",
      "default": true
    }
  ],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "userstyles": [
    {
      "url": "userscript.css",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "tags": ["editor", "codeEditor", "costumeEditor", "recommended"],
  "enabledByDefault": true,
  "l10n": true
}
