{
  "name": "积木外形自定义",
  "description": "调整Scratch积木大小，边缘弧度和卡槽高度",
  "tags": ["editor", "codeEditor", "theme", "recommended"],
  "credits": [
    {
      "name": "SheepTester",
      "link": "https://scratch.mit.edu/users/Sheep_maker/"
    },
    {
      "name": "lisa_wolfgang",
      "link": "https://scratch.mit.edu/users/lisa_wolfgang"
    },
    {
      "name": "GarboMuffin",
      "link": "https://scratch.mit.edu/users/GarboMuffin"
    }
  ],
  "enabledByDefault": false,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "info": [
    {
      "type": "warning",
      "text": "减小填充大小仅对您可见，因此当其他人查看您的项目时，您的积木可能会被折叠。",
      "id": "paddingWarning"
    }
  ],
  "settings": [
    {
      "name": "大小 (50-200%)",
      "id": "paddingSize",
      "type": "integer",
      "min": 50,
      "default": 100,
      "max": 200
    },
    {
      "name": "边缘弧度 (0-300%)",
      "id": "cornerSize",
      "type": "integer",
      "min": 0,
      "default": 100,
      "max": 300
    },
    {
      "name": "卡槽高度 (0-150%)",
      "id": "notchSize",
      "type": "integer",
      "min": 0,
      "default": 100,
      "max": 150
    }
  ],
  "presets": [
    {
      "name": "Scratch 3.0积木",
      "id": "default3",
      "description": "Scratch 3.0积木预设样式",
      "values": {
        "paddingSize": 100,
        "cornerSize": 100,
        "notchSize": 100
      }
    },
    {
      "name": "Scratch 2.0积木",
      "id": "default2",
      "description": "仿制Scratch 2.0积木样式",
      "values": {
        "paddingSize": 70,
        "cornerSize": 150,
        "notchSize": 75
      }
    },
    {
      "name": "Scratch 3.0方块",
      "id": "flat3",
      "description": "消除边缘和卡槽Scratch 3.0积木",
      "values": {
        "paddingSize": 100,
        "cornerSize": 0,
        "notchSize": 0
      }
    },
    {
      "name": "Scratch 2.0方块",
      "id": "flat2",
      "description": "消除边缘和卡槽Scratch 2.0积木",
      "values": {
        "paddingSize": 70,
        "cornerSize": 0,
        "notchSize": 0
      }
    }
  ],
  "l10n": true
}
