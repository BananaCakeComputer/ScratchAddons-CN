{
  "name": "自定义脚本区域缩放",
  "description": "调整积木最小大小，最大大小，每次缩放变化大小，初始化积木大小和自动隐藏按钮设置。",
  "tags": ["editor", "codeEditor"],
  "credits": [
    {
      "name": "ErrorGamer2000",
      "link": "https://scratch.mit.edu/users/ErrorGamer2000/"
    }
  ],
  "enabledByDefault": false,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "settings": [
    {
      "name": "最大大小 (100-500%)",
      "id": "maxZoom",
      "type": "integer",
      "min": 100,
      "default": 300,
      "max": 500
    },
    {
      "name": "最小大小 (1-100%)",
      "id": "minZoom",
      "type": "integer",
      "min": 1,
      "default": 30,
      "max": 100
    },
    {
      "name": "初始化积木大小 (50-500%)",
      "id": "startZoom",
      "type": "integer",
      "min": 50,
      "default": 68,
      "max": 500
    },
    {
      "name": "每次缩放大小 (50-200%)",
      "id": "zoomSpeed",
      "type": "integer",
      "min": 50,
      "default": 100,
      "max": 200
    },
    {
      "name": "自动隐藏按键",
      "id": "autohide",
      "type": "boolean",
      "default": false
    },
    {
      "name": "自动隐藏持续时间",
      "id": "speed",
      "type": "select",
      "potentialValues": [
        {
          "id": "none",
          "name": "无"
        },
        {
          "id": "short",
          "name": "短"
        },
        {
          "id": "default",
          "name": "默认"
        },
        {
          "id": "long",
          "name": "久"
        }
      ],
      "default": "default"
    }
  ],
  "l10n": true
}
