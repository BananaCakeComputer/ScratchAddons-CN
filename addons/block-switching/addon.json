{
  "name": "积木替换",
  "description": "右键一个积木以替换成类似的积木",
  "credits": [
    {
      "name": "GarboMuffin"
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["https://scratch.mit.edu/projects/*"]
    }
  ],
  "tags": ["editor", "codeEditor", "recommended"],
  "settings": [
    {
      "name": "菜单上显示当前积木选项",
      "id": "noop",
      "type": "boolean",
      "default": true
    },
    {
      "name": "与复制/添加注释/删除菜单选项分开",
      "id": "border",
      "type": "boolean",
      "default": true
    },
    {
      "name": "运动积木",
      "id": "motion",
      "type": "boolean",
      "default": true
    },
    {
      "name": "外观积木",
      "id": "looks",
      "type": "boolean",
      "default": true
    },
    {
      "name": "声音积木",
      "id": "sound",
      "type": "boolean",
      "default": true
    },
    {
      "name": "事件积木",
      "id": "event",
      "type": "boolean",
      "default": true
    },
    {
      "name": "控制积木",
      "id": "control",
      "type": "boolean",
      "default": true
    },
    {
      "name": "侦测积木",
      "id": "operator",
      "type": "boolean",
      "default": true
    },
    {
      "name": "运算积木",
      "id": "sensing",
      "type": "boolean",
      "default": true
    },
    {
      "name": "变量积木",
      "id": "data",
      "type": "boolean",
      "default": true
    },
    {
      "name": "自制积木",
      "id": "extension",
      "type": "boolean",
      "default": true
    }
  ],
  "libraries": ["scratch-blocks"],
  "l10n": true,
  "enabledByDefault": false
}
